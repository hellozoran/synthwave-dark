{
    "name": "synthwave-dark",
    "displayName": "SynthWave '84 Dark",
    "description": "A darker, higher contrast variant of SynthWave '84 with refined colors and improved readability",
    "version": "1.0.0",
    "author": "Zoran",
    "license": "MIT",
    "publisher": "z-bones",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/z-bones/synthwave-dark"
    },
    "bugs": {
        "url": "https://github.com/z-bones/synthwave-dark/issues"
    },
    "engines": {
        "vscode": "^1.33.0"
    },
    "extensionKind": [
        "ui"
    ],
    "keywords": [
        "theme",
        "color-theme",
        "dark",
        "synthwave",
        "retro",
        "80s",
        "neon",
        "cyberpunk"
    ],
    "categories": [
        "Themes"
    ],
    "activationEvents": [
        "onCommand:synthwave84.enableNeon",
        "onCommand:synthwave84.disableNeon"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "themes": [
            {
                "label": "SynthWave '84 Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/synthwave-color-theme.json"
            }
        ],
        "commands": [
            {
                "command": "synthwave84.enableNeon",
                "title": "SynthWave '84 Dark: Enable Neon Dreams"
            },
            {
                "command": "synthwave84.disableNeon",
                "title": "SynthWave '84 Dark: Disable Neon Dreams"
            }
        ],
        "configuration": {
            "title": "SynthWave '84 Dark",
            "properties": {
                "synthwave84.brightness": {
                    "type": "number",
                    "default": 0.45,
                    "description": "Set the brightness value for the glow effect. 0.0 is fully transparent and 1.0 is fully bright"
                },
                "synthwave84.disableGlow": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable the glow effect, but show editor chrome updates"
                }
            }
        }
    }
}
